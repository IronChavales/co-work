<div class="container">

    <h1> All the members</h1>

    <ul class="collection">
    <% for(var i = 0 ; i < members.length; i++ ){%>
       <li class="collection-item">
         <h4><%= members[i].name  %></h4>
         <h5><%= members[i].username %> - <%= members[i].email %></h5>
           <a href="/profile/<%= members[i]._id %>" class="waves-effect waves-light btn-large"> See Member</a>

         <% if (currentUserInfo.role === 'Admin') { %>
           <a href="/delete/<%= members[i]._id %>" class="waves-effect waves-light btn-large"> Delete Member</a>
         <% } %>

      </li>
     <% } %>
    </ul>

    <a href="/" class="waves-effect waves-light btn-large"> Back to profile </a>

</div>
