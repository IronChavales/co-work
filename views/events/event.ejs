<div class="container center">


    <h4> This is <i><%= event.name %></i> </h4>

    <div>
        <img src="<%= event.image %>" class="circle main-pic"/>
    </div>

    <div>
      <h5>Event name:</h5> <p><%= event.name %> </p>
      <h5>Date:</h5> <p><%= event.date %></p>
      <h5>Description:</h5> <p><%= event.description %> </p>
      <h5>Place:</h5> <p><a href="/space/<%= space._id %>"><%= event.place %></a></p>

    <h4>Leave a comment </h4>
      <form action="/leave-comment/<%= event._id %>/<%= currentUserInfo.name%>" method="post" enctype="form-data">
        <div>
          <label for="name-input"> Type here</label>
          <input type="text" name="description">
        </div>
        <button type="submit" class="waves-effect waves-light btn-large teal lighten-1 col s12">Submit</button>
      </form>

    <h4>Comments:</h4>

    <% for(var i = 0 ; i < comments.length; i++ ){%>
       <h5> <%= comments[i].writersName  %> says: </h5>
        <p>- <%= comments[i].description  %></p>
     <% } %>

   </div>

  </div>
