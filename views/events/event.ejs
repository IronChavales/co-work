<h2> This is <%= event.name %> </h2>

<section>
    <img src="<%= event.image %>" />
</section>


<section>
  <p>Event name: <%= event.name %> </p>
  <p>Date: <%= event.date %></p>
  <p>Description: <%= event.description %> </p>
  <p>Place: <a href="/space/<%= space._id %>"><%= event.place %></a></p>



<h2>Are you interested? Leave a commentary </h2>
  <form action="/leave-comment/<%= event._id %>/<%= currentUserInfo.name%>" method="post" enctype="form-data">
    <div>
      <label for="name-input"> Type here</label>
      <input type="text" name="description">
    </div>
    <button type="submit">Submit</button>
  </form>


<h2>Comments:</h2>

<% for(var i = 0 ; i < comments.length; i++ ){%>
   <h4> <%= comments[i].writersName  %> says: </h4>
    <p>- <%= comments[i].description  %></p>
 <% } %>

</section>

  <a href="/all-events"> Back to Events </a>
