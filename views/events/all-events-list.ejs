<div class="container">


  <h1> Those are all the events we have</h1>

  <ul class="collection">
  <% for(var i = 0 ; i < events.length; i++ ){%>
     <li class="collection-item"> <h4><%= events[i].name  %></h4> <h5><%= events[i].date %> </h5>
      <br><a href="/event/<%= events[i]._id %>"> Know more about this event </a></li>
   <% } %>
  </ul>
   <% if (currentUserInfo.role === 'Admin' || currentUserInfo.role === 'EventManager') { %>
  <a href="/create-event"> Create event </a>
  <% } %>
  <br>
  <a href="/" class="waves-effect waves-light btn-large"> Back Home </a>

</div>
