
<div class="container center">

    <h4> This is: <i><%= space.name %></i> </h4>

      <div>
          <img src="<%= space.picture %>" class="circle main-pic"/>
      </div>

      <div>
        <h5>Space name:</h5> <p><%= space.name %> </p>
        <h5>Capacity:</h5> <p><%= space.capacity %> </p>
      </div>

      <div class="col s6">
        <h5> Upcoming events: </h5>
        <ul class="collection">
          <% for(var i=0; i < events.length; i++){ %>
          <li class="collection-item avatar">
            <i class="material-icons circle red">event</i>
            <span class="title left"><%= events[i].name %></span>
                <p><a href="/event/<%= events[i]._id %>" class="right">See Event</a></p>
          </li>
          <% } %>
        </ul>
      </div>

    <% if (currentUserInfo.role === 'Admin' || currentUserInfo.role === 'EventManager') { %>
    <a href="/create-event" class="waves-effect waves-light btn-large teal lighten-1 z-depth-3 margin-bottom"> Create event </a>
    <% } %>

</div>
