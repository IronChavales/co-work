<h2> Welcome to <%= space.name %> </h2>

<section>
    <img src="<%= space.picture %>" />
</section>

<section>
  <p>Space name: <%= space.name %> </p>
  <p>Capacity: <%= space.capacity %> </p>
</section>

<section>
  <h4> Upcoming events: </h4>
  <ul>
  <% for(var i=0; i < events.length; i++){ %>
    <li><a href="/event/<%= events[i]._id %>"><%= events[i].name %></a></li>
  <% } %>
  </ul>
</section>

