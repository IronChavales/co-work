
<div class="container center">

    <h2> Welcome to <%= space.name %> </h2>

      <div>
          <img src="<%= space.picture %>" class="circle main-pic"/>
      </div>

      <div>
        <h5>Space name:</h5> <p><%= space.name %> </p>
        <h5>Capacity:</h5> <p><%= space.capacity %> </p>
      </div>

      <div>
        <h5> Upcoming events: </h5>
        <ul class="collection">
          <% for(var i=0; i < events.length; i++){ %>

          <li class="collection-item avatar">
            <i class="material-icons circle green">insert_chart</i>
            <span class="title"><%= events[i].name %></span>
                <p><a href="/event/<%= events[i]._id %>">See Event</a></p>
          </li>
          <% } %>
        </ul>
      </div>

    <% if (currentUserInfo.role === 'Admin' || currentUserInfo.role === 'EventManager') { %>
    <a href="/create-event" class="waves-effect waves-light btn-large"> Create event </a>
    <% } %>

</div>
