
<div class="container">

  <h2> These are all the spaces we have</h2>

    <ul class="collection">
    <% for(var i = 0 ; i < spaces.length; i++ ){%>
       <li class="collection-item"> <h4><%= spaces[i].name  %></h4> <h5><%= spaces[i].capacity %> </h5>
        <img src="<%= spaces[i].picture %>" class="circular circle avatar"/>
        <a href="/space/<%= spaces[i]._id %>" class="waves-effect waves-light btn-large right teal lighten-1 z-depth-3"> Know more about this space </a></li>
     <% } %>
    </ul>

    <% if (currentUserInfo.role === 'Admin') { %>
      <a href="/create-space" class="waves-effect waves-light btn-large teal lighten-1 z-depth-3 margin-bottom"> Create space </a>
        <% } else { %>
    <% } %>

</div>
