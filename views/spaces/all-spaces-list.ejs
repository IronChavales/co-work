<div class="container">

  <h1> These are all the spaces we have</h1>

    <ul class="collection">
    <% for(var i = 0 ; i < spaces.length; i++ ){%>
       <li class="collection-item"> <h4><%= spaces[i].name  %></h4> <h5><%= spaces[i].capacity %> </h5>
        <img src="<%= spaces[i].picture %>" class="circular circle avatar"/>
        <a href="/space/<%= spaces[i]._id %>" class="waves-effect waves-light btn-large right"> Know more about this space </a></li>
     <% } %>
    </ul>

    <% if (currentUserInfo.role === 'Admin') { %>
      <a href="/create-space" class="waves-effect waves-light btn-large"> Create space </a>
        <% } else { %>
    <% } %>

</div>
